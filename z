    <h2>Paste the magic Link Below and Click Explore</h2>
    
    <iframe id="domainB" src="https://api.cpms.silabs.com/documentation/static/index.html"></iframe>

    <script>
        // Function to copy the URL to clipboard without redirecting
        function copyToClipboard() {
            let url = "https://justluthra.github.io/justluthra/x.yaml"; 

            // Copy the URL to the clipboard
            navigator.clipboard.writeText(url).then(function() {
                console.log('URL copied to clipboard');
            }, function(err) {
                console.error('Failed to copy text: ', err);
            });
        }
    </script>
